<style>
    body{
        background-color: aqua;
    }
    .edit-heading h2{
    margin-left: 45%;
    margin-top: 7%;
    font-weight: bold;
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;   
    }
    form{
    margin-left: 37%;
    }
    form input{
    height: 40px;
    width: 320px;
    border-radius: 8px;
    border-color: transparent;
    }
    form label{
    font-weight: 500;
    font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    .form-btn button{
    background-color: chocolate;
    border-color: transparent;
    height: 30px;
    border-radius: 10px;
    font-size: 15px;
    }
    .view-btn a{
    margin-left: 44%;
    margin-top: 20px;
    font-size: 22px;
    padding: 5px;  
    text-decoration: none;
    }
    .view-btn{
        margin-top: 20px;
    }
    .alert{
        margin-left: 41%;
    }
    .msg{
    margin-top: 20px;
    }
</style>

<div class="edit-heading">
    <h2>Edit User</h2>
</div>


<div class="form-container">
   {{#each rows}}
    <form action="/edituser/{{this.id}}" method="post" autocomplete="false">
    
         <label for="name">Name</label><br>
        <input type="text" name="name" value="{{this.name}}"><br><br>

         <label for="age">Age</label><br>
        <input type="age"  name="age" value="{{this.age}}"><br><br>

         <label for="city">City</label><br>
        <input type="city" name="city" value="{{this.city}}"><br><br>
        
        <div class="form-btn">
            <button type="submit" class="add">Save Changes</button>
        </div>

    </form>  
    {{/each}}

    <div class="msg">
        {{#if msg}}
            <div class="alert">{{msg}}</div>
        {{/if}}
    </div>

    <div class="view-btn">
        <a href="/">View Users</a>
    </div>

</div>  
